@model IEnumerable<LoginRegistrationMVC.Models.Tour>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tour Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f9fc;
            color: #333;
        }

        .dashboard-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 15px 25px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-logout {
            background-color: #dc3545;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-logout:hover {
            background-color: #c82333;
        }

        .tour-card {
            background: #ffffff;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .tour-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .carousel-inner img {
            height: 300px;
            object-fit: cover;
        }

        .tour-info {
            padding: 20px;
        }

        .tour-name {
            font-size: 1.6em;
            font-weight: bold;
            color: #007bff;
        }

        .tour-place {
            font-size: 1.2em;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .tour-description {
            margin: 10px 0;
            font-size: 1em;
            line-height: 1.5;
        }

        .tour-price {
            font-size: 1.4em;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 10px;
        }

        .contact-info {
            font-size: 1em;
            color: #555;
        }

        .rating .fa {
            margin-right: 5px;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .carousel-inner img {
                height: 200px;
            }

            .tour-info {
                padding: 15px;
            }
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <!-- User Dashboard -->
        <div class="dashboard-container">
            <h2>Welcome, @ViewBag.Username</h2>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-logout">Logout</a>
        </div>

        <h1 class="text-center mb-4">Explore Our "ગુજરાત"</h1>

        <!-- Tour Cards -->
        <div class="row">
            @foreach (var tour in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="tour-card">
                        <!-- Carousel -->
                        <div id="carousel-@tour.TourName.Replace(" ", "-")" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @for (int i = 0; i < tour.Photos.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@tour.Photos[i]" class="d-block w-100" alt="Tour photo">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@tour.TourName.Replace(" ", "-")" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@tour.TourName.Replace(" ", "-")" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        <!-- Tour Info -->
                        <div class="tour-info">
                            <div class="tour-name">@tour.TourName</div>
                            <div class="tour-place">@tour.Place</div>
                            <div class="rating">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <span class="fa fa-star @(i < (int)tour.Rating ? "text-warning" : "text-muted")"></span>
                                }
                                (@tour.Rating)
                            </div>
                            <div class="tour-description">@tour.Description</div>
                            @*<div class="tour-price">$@tour.Price</div>*@
                            <div class="contact-info">Contact: @tour.ContactNumber</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
